<% provide(:title, 'Edit Account Owner') %>
<h1>Add Account Owner</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@account_owner) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <div style="display: inline-block;">
                <%= f.check_box :joint %>
            </div>
            <%= f.label :joint, :style => 'padding-left: 20px;'%>

            <%= f.submit "Update Account Owner", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>