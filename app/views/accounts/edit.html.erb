<% provide(:title, 'Edit Account') %>
<h1>Edit Account</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@account) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :value, "Current Value" %>
            <%= f.text_field :value %>


            <%= f.submit "Edit Account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>