<% provide(:title, 'Edit Account') %>
<h1>Edit Account</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@account) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :account_type %>
            <%= f.collection_select :account_type_id, @account_types, :id, :description %>

            <%= f.label :value, "Current Value" %>
            <%= f.text_field :value %>

            <%= f.submit "Save Account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>