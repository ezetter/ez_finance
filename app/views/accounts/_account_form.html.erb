<% provide(:title, form_title) %>
<h1><%= form_title %></h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <%= form_for @account, :html => {:role => "form"} do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name %>
                </div>
                <div class="form-group">
                    <%= f.label :account_type %>
                    <%= f.collection_select :account_type_id, @account_types, :id, :description %>
                    <div class="form-group">
                    </div>
                    <%= f.label :date_opened %>
                    <%= f.text_field :date_opened %>
                </div>
                <div class="form-group">
                    <%= f.label :account_owner %>
                    <%= f.collection_select :account_owner_id, @account_owners, :id, :description, {:include_blank => 'None'} %>
                </div>
                <div class="form-group">
                    <%= f.label :value, "Current Value" %>
                    <%= f.text_field :value %>
                </div>
                <%= f.submit "Save Account", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>