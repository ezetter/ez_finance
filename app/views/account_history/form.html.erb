<% provide(:title, 'Account History') %>
<h1>View Account History</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_tag({controller: "account_history", action: "view"}, method: "get") do  %>
            <%= label_tag :intervals, "Number of Intervals"%>
            <%= number_field_tag :intervals %>

            <%= label_tag :interval_size, "Interval Size" %>
            <%= number_field_tag :interval_size %>

            <%= select_tag(:account_id, options_for_select(@accounts), {:prompt => 'All accounts'}) %>

            <%= select_tag :account_type_id, options_for_select(@account_types), {:prompt => 'All types'} %>

            <%= select_tag :account_owner_id, options_for_select(@account_owners), {:prompt => 'All owners'} %>

            <%= submit_tag "View History", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>